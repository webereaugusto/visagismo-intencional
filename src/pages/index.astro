---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Essence from '../components/Essence.astro';
import WhatIsVisagismo from '../components/WhatIsVisagismo.astro';
import About from '../components/About.astro';
import Conceito from '../components/Conceito.astro';
import Metodo from '../components/Metodo.astro';
import Services from '../components/Services.astro';
import VisagismoTypes from '../components/VisagismoTypes.astro';
import Diferenciais from '../components/Diferenciais.astro';
import VisagismoCampinas from '../components/VisagismoCampinas.astro';
import Gallery from '../components/Gallery.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import Transformation from '../components/Transformation.astro';
import Location from '../components/Location.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <Hero />
    
    <!-- Essência - Segunda Seção -->
    <Essence />
    
    <!-- O que é Visagismo + Benefícios -->
    <WhatIsVisagismo />
    
    <!-- Sobre Ery Junior -->
    <About />
    
    <!-- O Conceito - A Ciência por Trás da Beleza -->
    <Conceito />
    
    <!-- O Método Ery Junior -->
    <Metodo />
    
    <!-- Serviços -->
    <Services />
    
    <!-- Visagismo Masculino e Feminino -->
    <VisagismoTypes />
    
    <!-- Diferenciais -->
    <Diferenciais />
    
    <!-- Visagismo em Campinas - SEO Section -->
    <VisagismoCampinas />
    
    <!-- Galeria -->
    <Gallery />
    
    <!-- Depoimentos -->
    <Testimonials />
    
    <!-- FAQ -->
    <FAQ />
    
    <!-- CTA Transformação -->
    <Transformation />
    
    <!-- Localização -->
    <Location />
    
    <!-- Contato -->
    <Contact />
  </main>
  
  <Footer />
</Layout>
