---
const whatsappLink = "https://wa.me/5519991103018?text=Olá, gostaria de saber mais sobre visagismo";

const benefits = [
  {
    number: "01",
    title: "Análise Facial",
    description: "Estudo detalhado do formato do rosto e proporções para determinar o corte que mais valoriza seus traços únicos."
  },
  {
    number: "02", 
    title: "Corte Personalizado",
    description: "Cada corte é uma obra única, desenvolvido exclusivamente para realçar suas características naturais."
  },
  {
    number: "03",
    title: "Autoestima Elevada",
    description: "Quando a imagem externa reflete a essência interior, a confiança floresce naturalmente."
  },
  {
    number: "04",
    title: "Estilo Atemporal",
    description: "Um corte baseado em visagismo transcende tendências passageiras e permanece elegante."
  }
];
---

<section class="relative py-24 md:py-32 overflow-hidden" id="visagismo">
  <!-- Dark Blue Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#0a0f1a] via-[#0d1424] to-[#0a1628]"></div>
  
  <!-- Gradient Mesh Effects -->
  <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-[#1a3a5c]/20 rounded-full blur-[120px] -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-[#0d2847]/30 rounded-full blur-[100px] translate-y-1/2"></div>
  <div class="absolute top-1/2 left-0 w-[400px] h-[400px] bg-gold/5 rounded-full blur-[100px] -translate-x-1/2"></div>
  
  <!-- Top edge gradient -->
  <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-dark to-transparent"></div>
  
  <!-- Bottom edge gradient -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-dark to-transparent"></div>
  
  <div class="relative max-w-7xl mx-auto px-6">
    
    <!-- Benefits Section -->
    <div class="relative">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-4 mb-6 animate-on-scroll">
          <span class="w-12 h-[1px] bg-gold animate-line"></span>
          <span class="text-gold text-xs tracking-[0.3em] uppercase font-montserrat font-medium">
            Benefícios
          </span>
          <span class="w-12 h-[1px] bg-gold animate-line"></span>
        </div>
        <h2 class="font-playfair text-3xl md:text-4xl lg:text-5xl font-medium text-white animate-on-scroll animate-delay-100">
          Por que escolher o <span class="text-gradient-gold italic">Visagismo?</span>
        </h2>
      </div>
      
      <!-- Benefits Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {benefits.map((benefit, index) => (
          <div class={`group relative p-8 border border-white/10 hover:border-gold/40 transition-all duration-500 bg-white/5 backdrop-blur-sm hover:bg-white/10 hover-lift animate-on-scroll animate-delay-${(index + 1) * 100}`}
            <!-- Number -->
            <span class="absolute top-4 right-4 font-playfair text-4xl text-gold/20 group-hover:text-gold/40 transition-colors">
              {benefit.number}
            </span>
            
            <!-- Gold accent line -->
            <div class="w-8 h-[2px] bg-gold mb-6 group-hover:w-16 transition-all duration-500"></div>
            
            <!-- Title -->
            <h3 class="font-playfair text-xl text-white mb-4 group-hover:text-gold transition-colors">
              {benefit.title}
            </h3>
            
            <!-- Description -->
            <p class="font-montserrat text-sm text-gray leading-relaxed">
              {benefit.description}
            </p>
            
            <!-- Hover corner accent -->
            <div class="absolute bottom-0 right-0 w-0 h-0 border-b-[40px] border-r-[40px] border-b-gold/0 border-r-gold/0 group-hover:border-b-gold/20 group-hover:border-r-gold/20 transition-all duration-500"></div>
          </div>
        ))}
      </div>
      
      <!-- Bottom CTA -->
      <div class="mt-16 text-center">
        <p class="font-montserrat text-gray mb-6">
          Pronta para descobrir o corte perfeito para você?
        </p>
        <a 
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Fale com Ery Junior via WhatsApp sobre visagismo"
          class="inline-flex items-center gap-3 border-2 border-gold text-gold px-10 py-4 font-montserrat text-sm font-semibold tracking-wider uppercase hover:bg-gold hover:text-dark transition-all duration-300"
        >
          <span>Fale com Ery Junior</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
    
  </div>
</section>
