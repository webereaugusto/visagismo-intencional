  { src: "/images/galeria/visagismo-campinas-ery-junior-04.webp", alt: "Antes e depois visagismo" },
  { src: "/images/galeria/visagismo-campinas-ery-junior-05.webp", alt: "Corte moderno Campinas" },
  { src: "/images/galeria/visagismo-campinas-ery-junior-06.webp", alt: "Estilo sofisticado Ery Junior" },
  { src: "/images/galeria/visagismo-campinas-ery-junior-07.webp", alt: "Visual renovado visagismo" },
  { src: "/images/galeria/visagismo-campinas-ery-junior-08.webp", alt: "Coloração premium Campinas" },
  { src: "/images/galeria/visagismo-campinas-ery-junior-09.webp", alt: "Corte personalizado Cambuí" },
  { src: "/images/galeria/visagismo-campinas-ery-junior-10.webp", alt: "Corte elegante feminino" },
