---

<section class="relative py-20 md:py-28 lg:py-36 overflow-hidden" id="diferenciais">
  <!-- Dark Blue Gradient Background (matching Benefits section) -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#0a0f1a] via-[#0d1424] to-[#0a1628]"></div>
  
  <!-- Gradient Mesh Effects -->
  <div class="absolute top-0 right-1/4 w-[500px] h-[500px] bg-[#1a3a5c]/20 rounded-full blur-[120px] -translate-y-1/2"></div>
  <div class="absolute bottom-0 left-1/4 w-[400px] h-[400px] bg-gold/5 rounded-full blur-[100px] translate-y-1/2"></div>
  
  <!-- Edge gradients for smooth transition -->
  <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-light to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-dark to-transparent"></div>
  
  <div class="relative max-w-7xl mx-auto px-5 md:px-6">
    
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 md:mb-20">
      <div class="flex items-center justify-center gap-3 mb-6 animate-on-scroll">
        <span class="w-10 md:w-12 h-[1px] bg-gold"></span>
        <span class="text-gold text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.3em] uppercase font-montserrat font-medium">
          Por Que Nos Escolher
        </span>
        <span class="w-10 md:w-12 h-[1px] bg-gold"></span>
      </div>
      
      <h2 class="font-playfair text-3xl md:text-5xl lg:text-6xl font-medium leading-tight mb-6 text-white animate-on-scroll animate-delay-100">
        Nossos <span class="text-gradient-gold italic">Diferenciais</span>
      </h2>
      
      <p class="font-montserrat text-gray-light text-sm md:text-base lg:text-lg leading-relaxed animate-on-scroll animate-delay-200">
        O que faz do <strong class="text-gold">Visagismo Intencional</strong> a escolha definitiva 
        para quem busca <strong class="text-white">excelência em visagismo em Campinas</strong>.
      </p>
    </div>
    
    <!-- Diferenciais Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {diferenciais.map((item, index) => (
        <div class={`group relative p-6 md:p-8 border border-white/10 hover:border-gold/40 bg-white/5 backdrop-blur-sm hover:bg-white/10 transition-all duration-500 animate-on-scroll animate-delay-${(index % 3 + 1) * 100}`}>
          
          <!-- Icon -->
          <div class="text-gold/70 group-hover:text-gold transition-colors duration-300 mb-6">
            <Fragment set:html={item.icon} />
          </div>
          
          <!-- Content -->
          <h3 class="font-playfair text-xl text-white mb-3 group-hover:text-gold transition-colors">
            {item.title}
          </h3>
          
          <p class="font-montserrat text-sm text-gray leading-relaxed">
            {item.description}
          </p>
          
          <!-- Corner accent on hover -->
          <div class="absolute bottom-0 right-0 w-0 h-0 border-b-[30px] border-r-[30px] border-b-gold/0 border-r-gold/0 group-hover:border-b-gold/20 group-hover:border-r-gold/20 transition-all duration-500"></div>
        </div>
      ))}
    </div>
    
    <!-- Bottom CTA -->
    <div class="mt-16 md:mt-20 text-center animate-on-scroll">
      <p class="font-montserrat text-gray-light text-sm md:text-base mb-6">
        Descubra a diferença de um <strong class="text-gold">atendimento de excelência</strong>
      </p>
      <a 
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 bg-gradient-to-r from-gold to-gold-dark text-dark px-8 md:px-10 py-4 md:py-5 font-montserrat text-xs md:text-sm font-bold tracking-wider uppercase hover:shadow-lg hover:shadow-gold/30 transition-all"
      >
        <span>Agende sua Consultoria</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
    
  </div>
</section>
