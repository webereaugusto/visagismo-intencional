  <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-gold/5 to-transparent"></div>
  <div class="absolute bottom-0 left-0 w-64 md:w-96 h-64 md:h-96 bg-gold/5 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"></div>
  
  <div class="relative max-w-7xl mx-auto px-5 md:px-6">
    
    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-2 gap-10 md:gap-16 lg:gap-24 items-center">
      
      <!-- Left - Text Content -->
      <div class="order-2 lg:order-1">
        <!-- Label -->
        <div class="flex items-center gap-2 md:gap-4 mb-4 md:mb-6 animate-on-scroll">
          <span class="w-8 md:w-12 h-[1px] bg-gold animate-line"></span>
          <span class="text-gold text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.3em] uppercase font-montserrat font-medium">
            O Conceito
          </span>
        </div>
        
        <!-- Main Title -->
        <h2 class="font-playfair text-3xl md:text-5xl lg:text-6xl font-medium leading-[1.1] mb-6 md:mb-8">
          <span class="text-white block animate-on-scroll animate-delay-100">A Ciência</span>
          <span class="text-white block animate-on-scroll animate-delay-200">por Trás da</span>
          <span class="text-gradient-gold italic text-4xl md:text-6xl lg:text-7xl animate-on-scroll animate-delay-300">Beleza.</span>
        </h2>
        
        <!-- Description -->
