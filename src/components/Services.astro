    <!-- CTA -->
    <div class="mt-12 text-center animate-on-scroll">
      <a 
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 bg-gradient-to-r from-gold to-gold-dark text-dark px-10 py-5 text-sm font-bold tracking-wider uppercase hover:shadow-lg hover:shadow-gold/30 transition-all animate-shine"
      >
        <span>Agendar Experiência</span>
      </a>
    </div>
    
  </div>
</section>
