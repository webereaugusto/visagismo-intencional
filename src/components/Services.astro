---

<!-- Fundo escuro -->
<section class="py-28 md:py-36 bg-dark" id="servicos">
  <div class="max-w-7xl mx-auto px-6">
    
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-flex items-center gap-3 text-gold text-xs tracking-[0.3em] uppercase font-montserrat font-medium justify-center animate-on-scroll">
        <span class="w-8 h-[1px] bg-gold animate-line"></span>
        Nossos Serviços
        <span class="w-8 h-[1px] bg-gold animate-line"></span>
      </span>
      <h2 class="font-playfair text-4xl md:text-5xl font-medium mt-6 mb-6 text-white animate-on-scroll animate-delay-100">
        Serviços <span class="text-gradient-gold italic">Disponíveis</span>
      </h2>
      <p class="font-montserrat text-gray text-base leading-relaxed animate-on-scroll animate-delay-200">
        Cada serviço é uma experiência única, desenvolvida para revelar o melhor de você.
      </p>
    </div>
    
    <!-- Main Services Grid -->
    <div class="grid md:grid-cols-2 gap-6 mb-16">
      {mainServices.map((service, index) => (
        <article class={`card-glow overflow-hidden hover-lift animate-on-scroll animate-delay-${(index % 2) * 100 + 100}`}>
          <div class="grid md:grid-cols-2">
            <!-- Image -->
            <div class="aspect-square overflow-hidden relative hover-zoom">
              <img 
                src={service.image} 
                alt={service.title}
                class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-all duration-500"
                loading="lazy"
                decoding="async"
                width="300"
                height="300"
              />
              <div class="absolute top-4 left-4 bg-gold text-dark px-3 py-1 text-xs font-montserrat font-semibold">
                {service.duration}
              </div>
            </div>
            
            <!-- Content -->
            <div class="p-8 flex flex-col justify-center">
              <h3 class="font-playfair text-2xl text-white font-medium mb-4">
                {service.title}
              </h3>
              
              <p class="font-montserrat text-gray text-sm leading-relaxed mb-6">
                {service.description}
              </p>
              
              <ul class="space-y-2 mb-6">
                {service.details.map((detail) => (
                  <li class="flex items-center gap-2 font-montserrat text-xs text-gray">
                    <span class="w-1.5 h-1.5 bg-gold rounded-full"></span>
                    <span>{detail}</span>
                  </li>
                ))}
              </ul>
              
              <a 
                href={whatsappLink}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-gold text-sm font-medium tracking-wider uppercase hover:gap-3 transition-all group"
              >
                <span>Agendar</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
    
    <!-- Additional Services -->
    <div class="border-t border-gold/20 pt-16 animate-on-scroll">
      <div class="text-center mb-12">
        <h3 class="font-playfair text-2xl md:text-3xl text-white font-medium">
          Também <span class="text-gradient-gold italic">Oferecemos</span>
        </h3>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-5">
        {additionalServices.map((service, index) => (
          <div class={`group relative p-6 text-center animate-on-scroll animate-delay-${index * 100}`}>
            <!-- Moldura elegante com cantos -->
            <div class="absolute inset-0 border border-gold/20 group-hover:border-gold/50 transition-colors duration-500"></div>
            
            <!-- Cantos decorativos -->
            <div class="absolute top-0 left-0 w-3 h-3 border-t border-l border-gold"></div>
            <div class="absolute top-0 right-0 w-3 h-3 border-t border-r border-gold"></div>
            <div class="absolute bottom-0 left-0 w-3 h-3 border-b border-l border-gold"></div>
            <div class="absolute bottom-0 right-0 w-3 h-3 border-b border-r border-gold"></div>
            
            <!-- Ícone -->
            <div class="text-gold/60 group-hover:text-gold transition-colors duration-300 flex justify-center mb-4">
              <Fragment set:html={service.icon} />
            </div>
            
            <!-- Conteúdo -->
            <h4 class="font-montserrat font-medium text-white text-sm mb-2 group-hover:text-gold transition-colors duration-300">
              {service.title}
            </h4>
            <p class="font-montserrat text-gray text-xs leading-relaxed">
              {service.description}
            </p>
          </div>
        ))}
